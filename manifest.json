{
  "name": "明道",
  "description": "Shows some of the features of the Context Menus API",
  "version": "0.6",
  "background": {
      "scripts": [
		  "js/ajax.js",
		  "js/background.js",
		  "js/hotkeys.js",
		  "js/utils.js",
		  "js/mingdao.js"
	  ]
   },
  "manifest_version": 2,
  "browser_action": {
          "default_icon": {              
            "19": "images/icon.png",           
            "38": "images/icon.png"          
          },
          "default_title": "MD",     
          "default_popup": "popup.html"      
        },
	"permissions":[
		"contextMenus",
        "https://api.mingdao.com/oauth2/authorize",
        "tabs",
		"http://*/*", 
		"https://*/*", 
		"activeTab", 
		"\u003Call_urls>"
    ],
	"content_scripts":[{
		 "exclude_globs": [ "http://huaban.com*", "http://www.huaban.com*"],
		 "include_globs": [ "*" ],
		 "matches":["<all_urls>"],
		"css": [ "css/capture.css","css/page.css" ],
        "js":[
			"js/isload.js",
			"js/content_script.js",
			"js/script.js",
			"js/shortcut.js",
			"js/page.js",
			"js/upload_ui.js"
			],
        "run_at":"document_end",
		"all_frames": true
    }],
	"web_accessible_resources":[
		"css/*",
		"js/*",
		"libs/*",
		"images/*",
		"login.html",
		"share.html"

	]
}
