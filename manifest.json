{
  "name": "明道",
  "description": "Shows some of the features of the Context Menus API",
  "version": "0.6",
  "background": {
      "scripts": ["js/background.js"]
   },
  "manifest_version": 2,
  "browser_action": {
          "default_icon": {              
            "19": "images/icon.png",           
            "38": "images/icon.png"          
          },
          "default_title": "MD",     
          "default_popup": "popup.html"      
        },
	"permissions":[
		"contextMenus",
        "https://api.mingdao.com/oauth2/authorize",
        "tabs"
    ],
	"content_scripts":[{
		 "matches":["<all_urls>"],
        "js":["js/isload.js","js/content_script.js","js/script.js"],
        "run_at":"document_idle",
		"all_frames": true
    }],
	"web_accessible_resources":[
		"js/*",
		"libs/*",
		"login.html"
	]
}
